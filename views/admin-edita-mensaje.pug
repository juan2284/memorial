extends ./layout/login
block contenido

  include ./layout/header


  h4.fechas.text-center.mt-0.px-0.text-white.mt-5 Editar Mensaje

  main.edit-mensaje.container.px-5
    .formulario-edit-mensaje.m-auto.row.p-4
      form#enviar-mail.py-4.px-5.container.text-white.col-12.col-md-8(action=`/admin/editar-mensaje/${testimonial.id}`, method="POST", name='enviar')
        .container.mb-1
          .row
            label.fw-semibold.mb-1(for='message') Mensaje:
            textarea#message.rounded.p-2.mb-1.w-100.col-12(type='text', class="form-control", placeholder='Mensaje', name="message", cols="30", rows="3", data-message=`${testimonial.message}`)
        .container.mb-1
          .row
            label.fw-semibold.mb-1(for='parrafo_1') Párrafo 1:
            textarea#parrafo_1.rounded.p-2.mb-1.w-100.col-12(type='text', class="form-control", placeholder='Párrafo 1', name="parrafo_1", cols="30", rows="3", data-message=`${testimonial.parrafo_1}`)
        .container.mb-1
          .row
            label.fw-semibold.mb-1(for='parrafo_2') Párrafo 2:
            textarea#parrafo_2.rounded.p-2.mb-1.w-100.col-12(type='text', class="form-control", placeholder='Párrafo 2', name="parrafo_2", cols="30", rows="3", data-message=`${testimonial.parrafo_2}`)
        .container.mb-1
          .row
            label.fw-semibold.mb-1(for='parrafo_3') Párrafo 3:
            textarea#parrafo_3.rounded.p-2.mb-1.w-100.col-12(type='text', class="form-control", placeholder='Párrafo 3', name="parrafo_3", cols="30", rows="3", data-message=`${testimonial.parrafo_3}`)

        .row.justify-content-between.mt-5
          button#enviar.btn-contacto.col-md-6.px-2.py-1.text-white.opacity-50.uppercase.fw-bold.no-hover(type='submit', disabled)
            | Enviar
          button#resetBtn.btn-contacto.col-md-6.px-2.py-1.text-white.uppercase.fw-bold(type='reset')
            | Reset


  include ./layout/footer